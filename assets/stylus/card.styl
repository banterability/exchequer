body
  font-family: Avenir

.card
  background-color: rgb(54, 65, 77)
  color: rgba(255, 255, 255, 0.95)

.field-group
  display: inline-block
  margin: 0 40px

  &:nth-child(2)
    margin-left: 0

  &:last-child
    margin-right: 0

  label
    color: rgba(255, 255, 255, 0.8)
    display: inline-block
    margin-right: 5px
    text-align: right
    width: 60px

  input
    background-color: rgb(54, 65, 77)
    border-bottom: 2px dotted rgba(255, 255, 255, 0.4)
    border: none
    color: white
    font-size: 36px
    margin: 0 10px
    padding: 5px
    width: 150px
