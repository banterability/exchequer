body
  font-family: Avenir

.card, .summary
  background-color: rgb(54, 65, 77)
  color: rgba(255, 255, 255, 0.95)

.summary .field-group
  margin: 0

.field-group
  display: inline-block
  margin: 0 40px

  &:nth-child(2)
    margin-left: 0

  &:last-child
    margin-right: 0

  label, .label
    color: rgba(255, 255, 255, 0.8)
    display: inline-block
    margin-right: 5px
    text-align: right

  label
    width: 60px

  .label
    width: 100px

  input, .display
    background-color: rgb(54, 65, 77)
    color: white
    font-size: 36px
    margin: 0 10px
    padding: 5px

  input
    border: none
    border-bottom: 2px dotted rgba(255, 255, 255, 0.4)
    font-family: Avenir
    font-size: 36px
    width: 150px

  .display
    width: 250px

.summary
  padding-bottom: 50px
  position: relative

  .field-group
    margin: 0 5px

button
  bottom: 15px
  position: absolute
  right: 15px
